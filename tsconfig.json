{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",                                
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./src/types"], 
    "strict": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", ".env"]
}
